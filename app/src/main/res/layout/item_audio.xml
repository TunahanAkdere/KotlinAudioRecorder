<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_background"
    android:padding="10dp"
    android:layout_margin="10dp"
    >

    <TextView
        android:id="@+id/fileNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="File Name"
        android:textSize="16sp"
        android:maxLines="3"
        android:singleLine="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/renameButton"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/renameButton"
        android:layout_width="122dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:text="Rename"
        android:background="@drawable/butonrename"
        android:textColor="#FEFBD8"
        app:layout_constraintBottom_toTopOf="@+id/playButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fileNameTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="122dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttonplay"
        android:text="Play"
        android:textColor="#424A40"
        app:layout_constraintBottom_toTopOf="@+id/deleteButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fileNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/renameButton" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="122dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:text="Delete"
        android:background="@drawable/buttondelete"
        android:textColor="#FEFBD8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fileNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/playButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
